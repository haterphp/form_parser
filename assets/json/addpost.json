{
    "name":"addpost",
    "fields":[
    {
        "label":"Title",
        "input": {
            "type":"text",
            "required": true
        }
    },
    {
        "label":"Description",
        "input": {
            "type":"textarea",
            "required":true
        }
    },
    {
        "label":"Image",
        "input": {
            "type":"file",
            "required": true
        }
    },
    {
        "label":"Publish Date",
        "input": {
            "type": "date",
            "required": true
        }
    },
    {
        "label": "Author",
        "input": {
            "type": "text"
        }
    },
    {
        "label": "Category",
        "input":{
            "type": "category",
            "required": true,
            "categories": ["all", "category 1", "category 2", "category 3"]
        }
    }
],
"references":[
    {
      "input":{
        "type":"checkbox",
        "required":true,
        "checked":"false"
      }
    },
    {
        "text":"View Author Post",
        "ref":"viewauthor"
    }
  ],
"buttons":[
    {
        "text":"Create Post",
        "className":"btn btn-success"
    }
]
}
